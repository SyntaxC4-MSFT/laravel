{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "siteName": {
            "type": "string"
        },
        "hostingPlanName": {
            "type": "string"
        },
        "siteLocation": {
            "type": "string"
        },
        "sku": {
            "type": "string",
            "allowedValues": [
                "Free",
                "Shared",
                "Basic",
                "Standard",
		            "Premium"
            ],
            "defaultValue": "Free"
        },
        "workerSize": {
            "type": "string",
            "allowedValues": [
                "0",
                "1",
                "2"
            ],
            "defaultValue": "0"
        },
        "repoUrl": {
            "type": "string"
        },
        "branch": {
            "type": "string",
            "defaultValue": "master"
        },
				"sqlServerName": {
     				"type": "string"
    		},
    		"sqlServerLocation": {
      			"type": "string"
    		},
    		"databaseSku": {
      			"type": "string",
      			"allowedValues": [
				        "Free",
				        "Jupiter",
				        "Saturn",
				        "Venus",
				        "titan"
      			],
      			"defaultValue": "Free"
    		},
        "redisCacheSKU": {
            "type": "string",
            "allowedValues": [ "Basic", "Standard" ],
            "defaultValue": "Basic"
        },
        "redisCacheFamily": {
            "type": "string",
            "allowedValues": [ "C" ],
            "defaultValue": "C"
        },
        "redisCacheCapacity": {
            "type": "int",
            "allowedValues": [ 0, 1, 2, 3, 4, 5, 6 ],
            "defaultValue": 0
        },
        "redisCacheVersion": {
            "type": "string",
            "allowedValues": [ "2.8" ],
            "defaultValue": "2.8"
        },
        "appkey": {
            "type": "string",
            "metadata": {
              "description": "Secure your application with an App Key."
            }
        }
    },
    "resources": [
        {
            "apiVersion": "2014-04-01-preview",
            "name": "[parameters('siteName')]",
            "type": "Microsoft.Cache/Redis",
            "location": "[parameters('siteLocation')]",
            "properties": {
                "sku": {
                    "name": "[parameters('redisCacheSKU')]",
                    "family": "[parameters('redisCacheFamily')]",
                    "capacity": "[parameters('redisCacheCapacity')]"
                },
                "redisVersion": "[parameters('redisCacheVersion')]",
                "enableNonSslPort": true
            }
        },
				{
      		"apiVersion": "2014-01-01",
      		"name": "[parameters('sqlServerName')]",
      		"type": "SuccessBricks.ClearDB/databases",
      		"plan": {
        		"name": "[parameters('databaseSku')]"
      		},
      		"location": "[parameters('sqlServerLocation')]",
      		"tags": {
        		"provision_source": "RMS"
      		}
    		},
        {
            "apiVersion": "2014-06-01",
            "name": "[parameters('hostingPlanName')]",
            "type": "Microsoft.Web/serverFarms",
            "location": "[parameters('siteLocation')]",
            "properties": {
                "name": "[parameters('hostingPlanName')]",
                "sku": "[parameters('sku')]",
                "workerSize": "[parameters('workerSize')]",
                "numberOfWorkers": 1
            }
        },
        {
            "apiVersion": "2014-06-01",
            "name": "[parameters('siteName')]",
            "type": "Microsoft.Web/sites",
            "location": "[parameters('siteLocation')]",
            "dependsOn": [
                "[concat('Microsoft.Web/serverFarms/', parameters('hostingPlanName'))]"
            ],
            "properties": {
                "name": "[parameters('siteName')]",
                "serverFarm": "[parameters('hostingPlanName')]"
            },
            "resources": [
                {
                    "apiVersion": "2015-06-01",
                    "type": "config",
                    "name": "web",
                    "dependsOn": [
                        "[concat('Microsoft.Web/sites/', parameters('siteName'))]"
                    ],
                    "properties": {
												"phpVersion": "5.5",
												"virtualApplications": [
              							{
                								"virtualPath": "/",
                								"physicalPath": "site\\wwwroot\\public"
              							}
												],
												"webSocketsEnabled": false,
            						"alwaysOn": false
                    }
                },
                {
                    "apiVersion": "2015-06-01",
                    "name": "appsettings",
                    "type": "config",
                    "dependsOn": [
                        "[concat('Microsoft.Web/sites/', parameters('siteName'))]"
                    ],
                    "properties": {
                        "REDIS_HOST": "[concat(parameters('siteName'), '.redis.cache.windows.net')]",
                        "REDIS_PORT": "6379",
												"REDIS_KEY": "[listKeys(resourceId('Microsoft.Cache/Redis', parameters('siteName')), '2014-04-01').primaryKey]",
                        "DB_HOST": "[reference(concat('SuccessBricks.ClearDB/databases/', parameters('sqlServerName'))).hostname]",
                        "DB_DATABASE": "[parameters('sqlServerName')]",
												"DB_USERNAME": "[reference(concat('SuccessBricks.ClearDB/databases/', parameters('sqlServerName'))).username]",
												"DB_PASSWORD": "[reference(concat('SuccessBricks.ClearDB/databases/', parameters('sqlServerName'))).password]",
												"APP_KEY": "[parameters('appkey')]"
                    }
                },
								{
				          "apiVersion": "2014-11-01",
				          "name": "ComposerExtension",
				          "type": "siteextensions",
				          "dependsOn": [
				            "[parameters('siteName')]"
				          ],
				          "properties": {
				          }
       					},
                {
                    "apiVersion": "2014-04-01",
                    "name": "web",
                    "type": "sourcecontrols",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/Sites', parameters('siteName'))]",
                        "[concat('Microsoft.Web/sites/', parameters('siteName'), '/config/web')]",
                        "[resourceId('Microsoft.Web/Sites/siteextensions', parameters('siteName'), 'ComposerExtension')]"
                    ],
                    "properties": {
                        "RepoUrl": "[parameters('repoUrl')]",
                        "branch": "[parameters('branch')]",
                        "IsManualIntegration": true
                    }
                }
            ]
        }
    ]
}
